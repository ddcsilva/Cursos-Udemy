@model Categoria

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Excluir Categoria</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />

            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Nome" class="form-control border-0 shadow" disabled />
                    <label asp-for="Nome" class="ms-2"></label>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="OrdemExibicao" class="form-control border-0 shadow" disabled />
                    <label asp-for="OrdemExibicao" class="ms-2"></label>
                    <span asp-validation-for="OrdemExibicao" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            <i class="bi bi-check-circle"></i> Excluir
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Categoria" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            <i class="bi bi-arrow-left-circle"></i> Voltar
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
