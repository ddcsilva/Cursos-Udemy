@model Produto

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Excluir Produto</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />

            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Titulo" disabled class="form-control border-0 shadow" />
                    <label asp-for="Titulo" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Descricao" disabled class="form-control border-0 shadow"></textarea>
                    <label asp-for="Descricao" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" disabled class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Autor" disabled class="form-control border-0 shadow" />
                    <label asp-for="Autor" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListaPreco" disabled class="form-control border-0 shadow" />
                    <label asp-for="ListaPreco" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Preco" disabled class="form-control border-0 shadow" />
                    <label asp-for="Preco" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Preco50" disabled class="form-control border-0 shadow" />
                    <label asp-for="Preco50" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Preco100" disabled class="form-control border-0 shadow" />
                    <label asp-for="Preco100" class="ms-2"></label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            <i class="bi bi-check-circle"></i> Excluir
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Produto" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            <i class="bi bi-arrow-left-circle"></i> Voltar
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
